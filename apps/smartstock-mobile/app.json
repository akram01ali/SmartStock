{
  "expo": {
    "name": "SmartStock",
    "slug": "smartstock-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/iacs_logo.jpeg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/iacs.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SmartStock to access your camera to scan barcodes and QR codes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SmartStock to access your photos to select images for stock updates."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "networkSecurityConfig": "@xml/network_security_config"
          }
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.akramali01.smartstockmobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/iacs_logo.jpeg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.akramali01.smartstockmobile"
    },
    "web": {
      "favicon": "./assets/iacs_logo.jpeg"
    },
    "extra": {
      "eas": {
        "projectId": "a9d43eba-53cd-43ad-91e2-64fdeadcc4c9"
      }
    },
    "owner": "akramali01"
  }
}
